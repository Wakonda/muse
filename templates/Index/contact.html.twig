{% extends sub_domain()~'_layout.html.twig' %}

{% block head_title %}{{ "contact.field.ContactUs"|trans }}{% endblock %}
{% block main_title %}{{ "contact.field.ContactUs"|trans }}{% endblock %}

{% block main_content %}
	{% form_theme form 'Form/fields.html.twig' %}

	{{ form_start(form, {'method' : 'post', 'action' : path('app_contact_send'), 'attr': {'novalidate': 'novalidate'} }) }}
		<div class="form-group row">
			{{ form_label(form.mail, null, {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
			<div class="col-sm-10">
				{{ form_errors(form.mail) }}{{ form_widget(form.mail, {'attr':{'class':'form-control'}}) }}
			</div>
		</div>

		<div class="form-group row">
			{{ form_label(form.subject, null, {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
			<div class="col-sm-10">
				{{ form_errors(form.subject) }}{{ form_widget(form.subject, {'attr':{'class':'form-control'}}) }}
			</div>
		</div>

		<div class="form-group row">
			{{ form_label(form.message, null, {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
			<div class="col-sm-10">
				{{ form_errors(form.message) }}{{ form_widget(form.message, {'attr':{'class':'text form-control'}}) }}
			</div>
		</div>
		{{ form_widget(form.send, {'icon': 'fa-paper-plane'}) }}
		{{ form_rest(form) }}
	{{ form_end(form) }}
{% endblock %}