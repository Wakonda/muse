{% set senderName = "send.index.Somebody"|trans %}

{% if data.firstName is not null %}
	{% set senderName = data.firstName %}
	
	{% if data.lastName is not null %}
		{% set senderName = senderName ~ " " ~ data.lastName %}
	{% endif %}
{% endif %}

{% set authorPoem = (entity.isBiography()) ? entity.biography.title : entity.user.username %}

<p>{{ senderName }} (<a href="mailto:{{ data.yourMail }}">{{ data.yourMail }}</a>) {{ "send.index.HeSentYouThisPoemWrittenBy"|trans }} <b>{{ authorPoem }}</b> {{ "send.index.AndEntitled"|trans }} <u><i>{{ entity.title }}</i></u>.</p>

{{ data.message|raw }}

<hr>

{{ entity.text|raw }}

<hr>

<p>{{ 'send.index.ThisPoemHasBeenSentSince'|trans }} <a href="{{ url('read', { 'id': entity.id, 'slug': entity.slug }) }}" alt="Poéticus">Poéticus</a></p>