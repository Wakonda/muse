{% for entity in entities %}
	<img src="{{ asset('photo/'~ folder ~'/'~entity.photo) }}" id="{{ entity.id }}" style="max-width: 100px" class="pointer">
{% endfor %}

<nav aria-label="Page navigation" class="mt-3">
	<ul class="pagination justify-content-center">
		<li class="page-item {{ page == 1 ? 'disabled' : '' }}"><a href="#" class="page-link previous-page" data-page="{{ page - 1 }}"><i class="fas fa-chevron-left"></i></a>
		<li class="page-item"><span class="page-link">{{ page }}</span></li>
		<li class="page-item {{ page == total ? 'disabled' : '' }}"><a href="#" class="page-link next-page" data-page="{{ page + 1 }}"><i class="fas fa-chevron-right"></i></a>
	</ul>
</nav>