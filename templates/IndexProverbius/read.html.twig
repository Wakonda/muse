{% extends 'proverbius_layout.html.twig' %}

{% block head_title %}{{ "proverb.read.Proverb"|trans }} - {{ entity.country.title }}{% endblock %}
{% block main_title %}{{ "proverb.read.Proverb"|trans }} - {{ entity.country.title }}{% endblock %}

{% block meta_tag_description %}{{ entity.text|striptags }}{% endblock %}

{% block meta_tag %}
	{{ parent() }}
	<meta property="og:description"   content="{{ entity.text }}" />
	
	{% if image is not null %}
		<meta name="twitter:card" content="summary_large_image">
		<meta name="twitter:title" content="{{ entity.text }}">
		<meta property="og:type" content="website">
		<meta property="og:image" content="{{ absolute_url(asset(constant('\\App\\Entity\\Proverb::PATH_FILE')~image.image)) }}" />
	{% endif %}
{% endblock %}

{% block style_additional %}
	<link rel="stylesheet" type="text/css" href="{{ asset('js/jquery.qtip/jquery.qtip.min.css') }}" />
{% endblock %}

{% block script_additional_sup %}
	<script src="{{ asset('js/tinymce/js/tinymce/tinymce.min.js') }}" type="text/javascript"></script>
{% endblock %}

{% block script_additional %}
<script src="{{ asset('js/jquery.qtip/jquery.qtip.min.js') }}"></script>
<script type="text/javascript">
	$(function()
	{
		$("#print_page").click(function()
		{
			window.print();
			
			return false;
		});
		
		$("div.vote_action").click(function()
		{
			initializeProgressValue("{{ path('app_vote_vote', { 'id' : entity.id }) }}?vote=" + $(this).data("vote"), $(this));
		});
		
		initializeProgressValue("{{ path('app_vote_vote', { 'id' : entity.id }) }}", null);
		
		function initializeProgressValue(url, el)
		{
			$.ajax(
			{
				type: "GET",
				url: url,
				cache: false,
				success: function(data)
				{
					$("progress#avancement").attr("value", data.value);
					$("progress#avancement").html("Score : " + data.value + "%");
					$("span#up_values").html(data.up);
					$("span#down_values").html(data.down);

					if(data.alreadyVoted != "")
					{
						el.qtip({
							content: {
								text: data.alreadyVoted,
								title: 'Erreur',
							},
							style: { classes: 'qtip-red' }
						});
						el.qtip("show");
						setTimeout(function(){ el.qtip("hide"); }, 3000);
					}
				}
			});
			return false;
		}
		
		$("#proverb_browsing span#next_data a").qtip({
			content: {
				text: $('#proverb_browsing span#next_data').data('navTitle'),
				title: $('#proverb_browsing span#next_data').data('navAction') + ' <i class="fas fa-arrow-circle-right"></i>'
			},
			position : {
					my: 'top right',
					at: 'bottom left'
			},
			style: { classes: 'qtip-tipped' }
		});
		
		$("#proverb_browsing span#previous_data a").qtip({
			content: {
				text: $('#proverb_browsing span#previous_data').data('navTitle'),
				title: '<i class="fas fa-arrow-circle-left"></i> ' + $('#proverb_browsing span#previous_data').data('navAction')
			},

			style: { classes: 'qtip-tipped' }
		});
		
		$('#send_modal').on('hidden.bs.modal', function () {
			$("#send_form .errors").remove();
		});
	});
</script>
{% endblock %}

{% block main_content %}
	<div class="d-none success" id="send_result"></div>
	<br>
	<div>
		<blockquote>
			<span class="d-none d-print-block">{{ ("photo/left-quotes-sign.png")|max_size_image() }}</span>
			{{ entity.text|raw }}
			<span class="d-none d-print-block">{{ ("photo/right-quotes-symbol.png")|max_size_image() }}</span>
		</blockquote>
	</div>
	
	{% if entity.images is not empty %}
	<h3>{{ "proverb.read.InPictures"|trans }}</h3>
	<div id="myCarousel" class="carousel slide mb-4" data-ride="carousel">
		<!-- Indicators -->
		<ol class="carousel-indicators hidden_print">
			{% for i in 0..entity.proverbImages|length - 1 %}
				<li data-target="#myCarousel" data-slide-to="{{ i }}" {{ i == 0 ? 'class="active"' : '' }}></li>
			{% endfor %}
		</ol>

		<!-- Wrapper for slides -->
		<div class="carousel-inner">
			{% set i = 0 %}
			{% for proverbImage in entity.proverbImages %}
				<div class="carousel-item {{ i == 0 ? 'active' : '' }}">
					<img src="{{ asset(constant('\\App\\Entity\\Proverb::PATH_FILE')~proverbImage.image) }}" class="text-center" alt="">
					<div class="carousel-caption hidden_print">
						<a class="btn btn-primary twitter social-network" target="_blank" title="Twitter" href="https://twitter.com/share?url={{ url('app_indexproverbius_read', {id: proverbImage.proverb.id, slug: proverbImage.proverb.slug, idImage: proverbImage.id}) }}&text={{ proverbImage.proverb.text }}&via=Proverbius" rel="nofollow" onclick="javascript:window.open(this.href, '', 'menubar=no,toolbar=no,resizable=yes,scrollbars=yes,height=400,width=700');return false;"><i class="fab fa-twitter" aria-hidden="true"></i></a>
						<a class="btn btn-primary facebook social-network" target="_blank" title="Facebook" href="https://www.facebook.com/sharer.php?u={{ url('app_indexproverbius_read', {id: proverbImage.proverb.id, slug: proverbImage.proverb.slug, idImage: proverbImage.id }) }}&t={{ proverbImage.proverb.text }}" rel="nofollow" onclick="javascript:window.open(this.href, '', 'menubar=no,toolbar=no,resizable=yes,scrollbars=yes,height=500,width=700');return false;"><i class="fab fa-facebook" aria-hidden="true"></i></a>
						<a class="btn btn-primary linkedin social-network" target="_blank" title="Linkedin" href="https://www.linkedin.com/shareArticle?mini=true&amp;url={{ url('app_indexproverbius_read', {id: proverbImage.proverb.id, slug: proverbImage.proverb.slug, idImage: proverbImage.id }) }}" rel="nofollow" onclick="javascript:window.open(this.href, '', 'menubar=no,toolbar=no,resizable=yes,scrollbars=yes,height=400,width=700');return false;"><i class="fab fa-linkedin" aria-hidden="true"></i></a>
						<a class="btn btn-primary pinterest social-network" target="_blank" title="Pinterest" href="https://pinterest.com/pin/create/button/?url={{ url('app_indexproverbius_read', {id: proverbImage.proverb.id, slug: proverbImage.proverb.slug, idImage: proverbImage.id }) }}&media={{ absolute_url(asset(constant('\\App\\Entity\\Proverb::PATH_FILE')~proverbImage.image)) }}&description={{ proverbImage.proverb.text }}" count-layout="horizontal" rel="nofollow" onclick="javascript:window.open(this.href, '', 'menubar=no,toolbar=no,resizable=yes,scrollbars=yes,height=400,width=700');return false;"><i class="fab fa-pinterest-p" aria-hidden="true"></i></a>
						<a href="{{ path('app_indexproverbius_downloadimage', {'fileName': proverbImage.image}) }}" class="btn btn-success "><i class="fas fa-download" aria-hidden="true"></i></a>
					</div>
				</div>
				{% set i = i + 1 %}
			{% endfor %}
		</div>

		<!-- Left and right controls -->
		<a class="carousel-control-prev hidden_print" href="#myCarousel" data-slide="prev">
			<span class="fas fa-chevron-left"></span>
			<span class="sr-only">Previous</span>
		</a>
		<a class="carousel-control-next hidden_print" href="#myCarousel" data-slide="next">
			<span class="fas fa-chevron-right"></span>
			<span class="sr-only">Next</span>
		</a>
	</div>
	{% endif %}

	{% if entity.tags is not empty %}
		<fieldset class="border rounded p-2">
			<legend class="w-auto mb-0"><i class="fas fa-tags"></i> Tags</legend>
			{% for tag in entity.tags %}
				<a href="{{ path('app_indexproverbius_tag', {id: tag.id, slug: tag.slug}) }}" class="badge badge-dark">{{ tag.title }}</a>
			{% endfor %}
		</fieldset>
	{% endif %}

	{% include "Admin/quick_admin.html.twig" with {edit_route: 'app_proverbadmin_edit', show_route: 'app_proverbadmin_show'} %}
	
	<hr>
	<p>
	<a href="{{ path('app_indexproverbius_country', {'id' : entity.country.id, 'slug' : entity.country.slug }) }}" alt=""><img class="flag" src="{{ asset(constant('\\App\\Entity\\Country::PATH_FILE')~entity.country.flag) }}" alt="" height="8" /> {{ "proverb.read.Proverb"|trans }} - {{ entity.country.title }}</a>
	</p>
	
	<div class="social_network_container">
		<div>
			<table class="hidden_print">
				<tbody>
					<tr>
						<td class="socialNetwork">
							<a href="{{ path('app_indexproverbius_readpdf', {'id' : entity.id, 'slug' : entity.slug}) }}" class="btn btn-outline-secondary"><i class="fas fa-file-pdf fa-fw fa-2x" aria-hidden="true"></i></a>
						</td>
						<td class="socialNetwork">
							<a id="print_page" href="#" class="btn btn-outline-secondary"><i class="fas fa-print fa-fw fa-2x" aria-hidden="true"></i></a>
						</td>
						<td class="socialNetwork">
							<a href="#" data-toggle="modal" data-target="#send_modal" class="btn btn-outline-secondary"><i class="fas fa-envelope fa-fw fa-2x" aria-hidden="true"></i></a>
						</td>
					</tr>
				</tbody>
			</table>
		</div>
		<div>
			<table class="hidden_print">
				<tbody>
					<tr>
						<td class="social-media-icons" id="twitter">
							<a class="social-network twitter" href="https://twitter.com/home?status={{ entity.text }} - {{ url('app_indexproverbius_read', { id: entity.id, slug: entity.slug }) }}" rel="nofollow" target="_blank" title="Tweet This!"><i class="fab fa-twitter-square fa-2x"></i></a>
						</td>
						<td class="social-media-icons">
							<a class="social-network facebook" href="https://www.facebook.com/share.php?v=4&amp;src=bm&amp;u={{ url('app_indexproverbius_read', { id: entity.id, slug: entity.slug }) }}&amp;t={{ entity.text }}" onclick="window.open(this.href,&quot;sharer&quot;,&quot;toolbar=0,status=0,width=626,height=436&quot;); return false;" rel="nofollow" target="_blank" title="Share this on Facebook"><i class="fab fa-facebook-square fa-2x"></i></a>
						</td>
						<td class="social-media-icons">
							<a class="social-network linkedin" href="https://www.linkedin.com/shareArticle?mini=true&amp;url={{ url('app_indexproverbius_read', { id: entity.id, slug: entity.slug }) }}" onclick="window.open(this.href,&quot;sharer&quot;,&quot;toolbar=0,status=0,width=626,height=436&quot;); return false;" rel="nofollow" target="_blank" title="Share this on Linkedin"><i class="fab fa-linkedin fa-2x"></i></a>
						</td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
	<!-- Modal -->
	<div class="modal fade hidden_print" id="send_modal" tabindex="-1" role="dialog" aria-labelledby="sendModalLabel">
		<div class="modal-dialog modal-lg" role="document">
			<div class="modal-content">
				<div class="modal-header">
					<h4 class="modal-title" id="sendModalLabel"><i class="fas fa-share-square" aria-hidden="true"></i> {{ "send.index.SendFriend"|trans }}</h4>
					<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
				</div>
				{{ render(controller('App\\Controller\\SendController::indexAction', {'id': entity.id})) }}
			</div>
		</div>
	</div>
	
	{% if(browsingProverbs['previous'] is not empty or browsingProverbs['next'] is not empty) %}
		<div id="proverb_browsing" class="hidden_print">
			<hr>
			{% if(browsingProverbs['previous'] is not empty) %}
				<span data-nav-action="Précédent" data-nav-title="{{ browsingProverbs['previous']['text'] }}" id="previous_data"><a href="{{ path('app_indexproverbius_read', {'id' : browsingProverbs['previous']['id'], 'slug' : browsingProverbs['previous']['slug']}) }}"><i class="fas fa-arrow-circle-left"></i> {{ "proverb.browsing.Previous"|trans }}</a></span>
			{% endif %}
			
			{% if(browsingProverbs['next'] is not empty) %}
				<span data-nav-action="Suivant" data-nav-title="{{ browsingProverbs['next']['text'] }}" class="float-right" id="next_data"><a href="{{ path('app_indexproverbius_read', {'id' : browsingProverbs['next']['id'], 'slug' : browsingProverbs['next']['slug']}) }}">{{ "proverb.browsing.Next"|trans }} <i class="fas fa-arrow-circle-right"></i></a></span>
			{% endif %}
		</div>
		<div style="clear: both;"></div>
	{% endif %}
	
	<div class="hidden_print">
		<hr>
		<h2>{{ 'vote.index.Votes'|trans }}</h2>
		<table id="proverb_vote">
			<tr>
				<td>
					<div id="up_vote"data-vote="up" class="vote_action" ><i class="fas fa-plus"></i></div>
				</td>
				<td>
					<progress id="avancement" value="50" max="100"></progress>
				</td>
				<td>
					<div id="down_vote" data-vote="down" class="vote_action"><i class="fas fa-minus"></i></div>
				</td>
			</tr>
			<tr>
				<td>
					<span id="up_values">-</span>
				</td>
				<td>

				</td>
				<td>
					<span id="down_values">-</span>
				</td>
			</tr>
		</table>
	</div>

	{{ render(controller('App\\Controller\\CommentController::indexAction', {'id': entity.id})) }}
{% endblock %}