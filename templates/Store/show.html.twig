{% extends sub_domain()~'_layout.html.twig' %}

{% block head_title %}{{ 'menu.left.Admin'|trans }} - {{ 'admin.index.Store'|trans }}{% endblock %}
{% block main_title %}{{ 'menu.left.Admin'|trans }} - {{ 'admin.index.Store'|trans }}{% endblock %}

{% block main_content %}
	<table class="table table-bordered admin_show">
		<tr>
			<th>{{ "admin.store.Title"|trans }}</th>
			<td>{{ entity.title }}</td>
		</tr>
		<tr>
			<th>{{ "admin.store.Text"|trans }}</th>
			<td>{{ entity.text|raw }}</td>
		</tr>
		<tr>
			<th>{{ 'admin.store.Image'|trans }}</th>
			<td>{% if entity.photo is not empty %}<p class="text-center">{{ (constant('\\App\\Entity\\Store::PATH_FILE')~entity.photo)|max_size_image() }}</p>{% endif %}</td>
		</tr>
		<tr>
			<th>{{ 'admin.store.EmbedCode'|trans }}</th>
			<td>{{ entity.embedCode|raw }}</td>
		</tr>
		<tr>
			<th>{{ "admin.store.Biography"|trans }}</th>
			<td>{% if entity.biography is not empty %}<a href="{{ path('app_biographyadmin_show', {'id': entity.biography.id}) }}">{{ entity.biography.title }}</a> {% if entity.biography.text is empty %}<a href="{{ path('app_biographyadmin_edit', {'id': entity.biography.id}) }}" class="btn btn-info"><i class="fas fa-edit fa-lg"></i></a>{% endif %}{% else %}{{ "store.index.UnknownAuthor"|trans }}{% endif %}</td>
		</tr>
		<tr>
			<th>{{ "admin.store.ProductCode"|trans }}</th>
			<td>{{ entity.amazonCode|raw }}</td>
		</tr>
		<tr>
			<th>{{ "admin.form.Language"|trans }}</th>
			<td>{{ entity.language.title }}</td>
		</tr>
		<tr>
			<th>{{ 'admin.form.Slug'|trans }}</th>
			<td>{{ entity.slug }}</td>
		</tr>
	</table>
	<hr>
	<a href="{{ path('app_storeadmin_index') }}"><i class="fas fa-list"></i> {{ 'admin.index.List'|trans }}</a> - <a href="{{ path('app_storeadmin_edit', { 'id' : entity.id }) }}"><i class="fas fa-edit"></i> {{ 'admin.index.Update'|trans }}</a> - <a href="{{ path('app_storeadmin_new') }}"><i class="fas fa-plus-square"></i> {{ 'admin.index.Create'|trans }}</a>
{% endblock %}