		{{ 'admin.quote.ForSameBiography'|trans }}
	</a>
	{% if entity.source %}
		 | 
		<a href="{{ path('app_quoteadmin_new', {'biographyId' : 0, 'sourceId' : entity.source.id}) }}">
			{{ 'admin.quote.ForSameSource'|trans }}
		</a>
